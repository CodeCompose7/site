{{- $index := slice -}}
{{- range .Site.Pages -}}
  {{- $section := .Site.GetPage "section" .Section -}}
  {{- $showDate := .Params.showDate | default .Site.Params.article.showDate -}}
  {{- $summary := "" -}}
  {{- if .Params.summary -}}
    {{- $summary = .Params.summary | emojify | replaceRE "<[^>]*>" "" | safeJS -}}
  {{- else if .Params.description -}}
    {{- $summary = .Params.description | emojify | safeJS -}}
  {{- else -}}
    {{- $summary = .Summary | emojify | replaceRE "<[^>]*>" "" | safeJS -}}
    {{- if gt (len $summary) 200 -}}
      {{- $summary = substr $summary 0 200 | printf "%s..." -}}
    {{- end -}}
  {{- end -}}
  {{- $index = $index | append (dict
    "date" (cond (and .IsPage $showDate) (.Date | time.Format (site.Params.dateFormat | default ":date_long")) nil)
    "title" (.Title | emojify | safeJS)
    "section" ($section.Title | emojify | safeJS)
    "summary" $summary
    "content" (.Plain | emojify | safeJS)
    "permalink" .Permalink
    )
  -}}
{{- end -}}
{{- $index | jsonify -}}

